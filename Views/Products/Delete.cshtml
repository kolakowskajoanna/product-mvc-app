@model product_manager.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete product";
}

<div class="text-left" style="margin-top: 10px;">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">
                Are you sure you want to delete product #@Html.DisplayFor(model => model.Id)?
            </h4>
            <div class="row">
                <div class="col col-3 text-right">
                    <p class="p-detail--display-name">
                        @Html.DisplayNameFor(model => model.ProductCategory)
                    </p>
                </div>
                <div class="col col-9 text-left">
                    <p>
                        @Html.DisplayFor(model => model.ProductCategory.CategoryName)
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col col-3 text-right">
                    <p class="p-detail--display-name">
                        @Html.DisplayNameFor(model => model.ProductName)
                    </p>
                </div>
                <div class="col col-9 text-left">
                    <p >
                        @Html.DisplayFor(model => model.ProductName)
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col col-3 text-right">
                    <p class="p-detail--display-name">
                        @Html.DisplayNameFor(model => model.ProductDescription)
                    </p>
                </div>
                <div class="col col-9 text-left">
                    <p>
                        @Html.DisplayFor(model => model.ProductDescription)
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col col-3 text-right">
                    <p class="p-detail--display-name">
                        @Html.DisplayNameFor(model => model.ProductPrice)
                    </p>
                </div>
                <div class="col col-9 text-left">
                    <p>@Html.DisplayFor(model => model.ProductPrice) <span>PLN</span></p>
                </div>
            </div>
             <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" 
                    class="btn btn-danger">Confirm delete</button>
                <a asp-action="Index"
                    class="btn btn-outline-primary">Back to List</a>
            </form>
        </div>
    </div>
</div>
