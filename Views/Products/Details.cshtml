@model product_manager.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Product details";
}

<div class="text-left" style="margin-top: 10px;">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Product #
                <span>
                    @Html.DisplayFor(model => model.Id)
                </span>
            </h4>
            <div class="row">
                <div class="col col-3 text-right">
                    <p class="p-detail--display-name">
                        @Html.DisplayNameFor(model => model.ProductCategory)
                    </p>
                </div>
                <div class="col col-9 text-left">
                    <p>
                        @Html.DisplayFor(model => model.ProductCategory.CategoryName)
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col col-3 text-right">
                    <p class="p-detail--display-name">
                        @Html.DisplayNameFor(model => model.ProductName)
                    </p>
                </div>
                <div class="col col-9 text-left">
                    <p >
                        @Html.DisplayFor(model => model.ProductName)
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col col-3 text-right">
                    <p class="p-detail--display-name">
                        @Html.DisplayNameFor(model => model.ProductDescription)
                    </p>
                </div>
                <div class="col col-9 text-left">
                    <p>
                        @Html.DisplayFor(model => model.ProductDescription)
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col col-3 text-right">
                    <p class="p-detail--display-name">
                        @Html.DisplayNameFor(model => model.ProductPrice)
                    </p>
                </div>
                <div class="col col-9 text-left">
                    <p>@Html.DisplayFor(model => model.ProductPrice) <span>PLN</span></p>
                </div>
            </div>
            <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
